# Database Configuration
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=vita_db
DB_PORT=5432
CONNECTION_STRING=postgresql://postgres:your_password@localhost:5432/vita_db
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000
LOG_LEVEL=INFO

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=24h

# API Configuration
PORT=3001
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT=100
RATE_LIMIT_WINDOW_MS=900000

# Bcrypt Configuration
BCRYPT_SALT_ROUNDS=10

# Gmail API Configuration
EMAIL_ADDRESS=your_gmail@gmail.com
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://developers.google.com/oauthplayground

# Gmail API Tokens (will be filled by generateGmailToken.js)
GMAIL_ACCESS_TOKEN=your_gmail_access_token
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token
GMAIL_TOKEN_EXPIRY=token_expiry_timestamp

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:3000
